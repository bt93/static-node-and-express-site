extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
     
      h1 My Portfolio

      p.lead.text-light
        | Check out the projects that I created through my time in Treehouse's Full-Stack JavaScript Techdegree!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each val, index in data
        .cell
          a(href=`project/${val.id}`)
            img.thumbnail(src= val.image_urls[0])
            h5= val.project_name
      
