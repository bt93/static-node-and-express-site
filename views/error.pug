extends layout.pug

block content
    nav.grid-container.portfolio-breadcrumb
        a(href='/') ‚Üê Back
    article.grid-container.portfolio-intro.portfolio-project
        .grid-x
        .cell.small-6.medium-9.large-9

        h1= err.status
        h2= err.message
        p There was a problem recieving the page you were looking for.
